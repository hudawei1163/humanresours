<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iotek.dao.UserDao">
    <insert id="addUser">
        insert into user(name, pass) values
        <foreach collection="users" item="user" separator=",">
            (#{user.name},#{user.pass})
        </foreach>
    </insert>
    <update id="updateUser">
    </update>
    <delete id="deleteUser">

    </delete>
    <select id="queryUserByNameAndPass" resultType="com.iotek.model.User">
        SELECT * FROM user WHERE name=#{name} AND pass=#{pass}
    </select>
    <select id="queryAllUser" resultType="com.iotek.model.User">

    </select>
    <select id="queryUserById" resultType="com.iotek.model.User">

    </select>
    <select id="queryUserByName" resultType="com.iotek.model.User">

    </select>

</mapper>